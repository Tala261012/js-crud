{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page">

	{{> heading title = "Информцаия о товаре" info = "Компьютеры и ноутбуки"}}

	{{#with data.product}}
	<form method="POST" action="/purchase-create?id={{id}}">

		<div class="product-info">

			<img src="{{img}}" alt="{{title}}" class="product-info__image">
			<h2 class="product-info__title">{{title}}</h2>
			<p class="product-info__subtitle">{{description}}</p>

			{{> divider}}

			{{#each category}}
			<span class="product-card__category product-card__category--{{id}}">{{text}}</span>
			{{/each}}

			{{> divider}}

			{{> field label="Количество" type='number' name='amount' value='1'}}

			{{> button text="Купити зараз" price=price}}
		</div>

	</form>
	{{/with}}

	{{> heading title = "Другие товары" info = "Компьютеры и ноутбуки"}}

	<section class="product-list">
		{{#each data.list}}
		{{> purchase-product data=this}}
		{{/each}}
	</section>

</div>



